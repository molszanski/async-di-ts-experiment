{
  "name": "snow-splash-react",
  "version": "0.4.0-alpha",
  "description": "Handy React bindings for snow-splash",
  "type": "module",
  "source": "src/index.ts",
  "exports": {
    "require": "./dist/snow-splash-react.cjs",
    "default": "./dist/snow-splash-react.modern.js"
  },
  "main": "./dist/snow-splash-react.cjs",
  "module": "./dist/snow-splash-react.module.js",
  "typings": "./dist/src/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "microbundle -o dist/  --jsx React.createElement",
    "dev": "microbundle watch -o dist/ --jsx React.createElement",
    "test": "yarn tsd",
    "jestWatch": "jest --watch --verbose",
    "tsd": "tsd tsd_project",
    "prepare-not": "install-peers"
  },
  "dependencies": {
    "utility-types": "^3.10.0"
  },
  "devDependencies": {
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.38",
    "install-peers-cli": "^2.2.0",
    "jest": "^27.4.7",
    "microbundle": "^0.14.2",
    "nodemon": "^2.0.15",
    "ts-jest": "^27.1.3",
    "snow-splash": "0.4.0-alpha",
    "tsd": "^0.19.1",
    "typescript": "^4.5.5"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-dom": "^17.0.2"
  },
  "repository": "https://github.com/molszanski/snow-splash",
  "author": "Nick Olszanski",
  "license": "MIT",
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "arrowParens": "always",
    "trailingComma": "all"
  }
}

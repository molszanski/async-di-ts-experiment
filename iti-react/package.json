{
  "name": "iti-react",
  "version": "0.7.0-alpha.0",
  "description": "Handy React bindings for iti, a ~1kB Typesafe dependency injection framework for TypeScript and JavaScript with a unique support for async flow",
  "type": "module",
  "sideEffects": false,
  "source": "src/index.ts",
  "module": "./dist/iti-react.mjs",
  "typings": "./dist/src/index.d.ts",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/iti-react.mjs"
      },
      "default": "./dist/iti-react.mjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf ./dist && microbundle -o dist/  --jsx React.createElement --format modern",
    "dev": "microbundle watch -o dist/ --jsx React.createElement",
    "test": "yarn tsd",
    "tsd": "tsd tsd_project",
    "prepare-not": "install-peers"
  },
  "dependencies": {
    "iti": "0.7.0-alpha.0",
    "utility-types": "^3.10.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.15",
    "install-peers-cli": "^2.2.0",
    "microbundle": "^0.15.1",
    "nodemon": "^2.0.19",
    "tsd": "^0.22.0",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-dom": ">=17.0.2"
  },
  "repository": "https://github.com/molszanski/iti",
  "homepage": "https://itijs.org",
  "author": "Nick Olszanski",
  "license": "MIT",
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "arrowParens": "always",
    "trailingComma": "all"
  }
}
